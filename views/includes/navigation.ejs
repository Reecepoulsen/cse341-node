<header>
    <nav class="nav">
        <h2><i class="icofont-tattoo-wing"></i> Sneaks</h2>
        <ul class="nav__options">
        <li><a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a></li>
        <li><a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a></li>
        <% if (isAuthenticated) { %>
            <li><a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a></li>
            <li><a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a></li>
            <li><a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add Product</a></li>
            <li><a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Admin Products</a></li>
        <% } %>
        </ul>
        <ul class="nav__actions"> 
            <% if (!isAuthenticated) { %>
                <li class="main-header__item">
                    <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
                </li>
                <li class="main-header__item">
                    <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
                </li>
            <% } else { %>
                <li class="main-header__item">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button class="btn" type="submit">Logout</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>